{
  "name": "lol-overlay",
  "version": "1.0.7",
  "description": "LoL ARAM Overlay",
  "repository": {
    "type": "git",
    "url": "https://github.com/minseop8787/lol-overlay.git"
  },
  "author": "User",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "electron": "electron .",
    "dev": "set BROWSER=none && start /B npm start && timeout /t 5 && npm run electron",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.loloverlay.app",
    "productName": "LoL Overlay Pro",
    "publish": [
      {
        "provider": "github",
        "owner": "minseop8787",
        "repo": "lol-overlay"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico",
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "LoL Overlay Pro",
      "artifactName": "LoL-Overlay-Pro-Setup-${version}.${ext}"
    },
    "extraResources": [
      {
        "from": "../backend/dist/lol_api",
        "to": "lol_backend"
      },
      {
        "from": "public/favicon.ico",
        "to": "tray_icon.ico"
      }
    ],
    "directories": {
      "output": "dist"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}